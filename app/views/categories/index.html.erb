<main>
  <%= render partial: 'shared/navigation' %>
  <div class='add_categories_div'>
    <% @category_total_amounts.each do |category, total_amount| %>
      <div class='category-card'>
        <div class='total_and_delete_div'>
          <div class='cat_and_total'>
            <p ><%= link_to category.name, category_expenses_path(category_id: category.id), class: 'category_name' %> </p>
            <p>Total <%= number_to_currency(total_amount) %></p>
          </div>
          <div class='category_delete_botton_div'>
            <%= button_to 'Delete', category_path(category), method: :delete, class: 'category_delete_botton' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= button_to 'Add category', new_category_path, method: :get, class: 'add_category_btn' %>
</main>

