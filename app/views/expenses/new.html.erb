<main>
  <%= render partial: 'shared/navigation' %>
  <h3 class='new-expense-ribbon'>Add Expense</h3>
  <%= link_to 'Back', categories_path%>
  <%= form_with(model: @expense, url: category_expenses_path(user_id: current_user.id, category_id: @category.id), local: true) do |form| %>
      <div class='expense-inputs'>
        <div>
          <%= form.text_field :name, class: 'field expense-field', placeholder: 'Expense name' %>
        </div>
        <div>
          <%= form.number_field :amount, class: 'field expense-field', placeholder: 'Amount ($)' %> <br>
        </div>

        <%= form.collection_select :game_id, Category.where(user_id: current_user.id), :id, :name, class: "form-control" %>
        
        <div>
          <%= form.submit 'Add Expense', class: 'expense-field save_category_btn' %>
        </div>
        
      </div>
  <% end %>
</main>

