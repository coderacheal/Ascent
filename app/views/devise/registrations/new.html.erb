<main>
  <%= render partial: 'shared/pre_signup' %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class='new-registration'>
      <%= render "devise/shared/error_messages", resource: resource %>

        <%= f.text_field :name, autofocus: true, placeholder: 'Full name', class: "field expense-field"  %>

        <div class="field">
            <%= f.label 'Profile Picture' %><br />
            <%= f.file_field :image, placeholder: 'Avatar', class: 'session-form-input' %>
        </div>
      
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: "field expense-field" %>

        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: "field" %>

        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm password', class: "field"  %>

        <%= f.submit "Sign up", class: 'login_button' %>

      </div>
    <% end %>




</main>

